<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonProfileActivity"
    android:background="@color/colorProfile"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/person_profile_pic"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile"
                >
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:id="@+id/person_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile Name"
                android:layout_below="@+id/person_profile_pic"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:textSize="20sp"
                >
            </TextView>
            <TextView
                android:id="@+id/person_blood_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Group"
                android:layout_below="@+id/person_profile_name"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:textSize="20sp"
                >
            </TextView>

            <TextView
                android:id="@+id/person_profile_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello I am using BADHON"
                android:layout_below="@+id/person_blood_group"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                android:textSize="20sp"
                >
            </TextView>

            <TextView
                android:id="@+id/person_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="District"
                android:layout_below="@+id/person_profile_status"
                android:layout_marginTop="60dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="20sp"
                >
            </TextView>

            <TextView
                android:id="@+id/person_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_below="@+id/person_district"
                android:layout_marginTop="7dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="20sp"
                >
            </TextView>

            <Button
                android:id="@+id/send_request_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/person_gender"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:text="Send Request"
                android:textSize="25dp"
                android:background="@android:color/holo_green_dark"
                android:textStyle="bold"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/decline_request_button"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/send_request_button"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:text="Decline Request"
                android:textSize="22dp"
                android:background="@drawable/buttons"
                android:textStyle="bold"
                android:textColor="#ffffff"/>


        </RelativeLayout>



    </ScrollView>


</RelativeLayout>